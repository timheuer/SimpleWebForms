{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.Components.Server": "Debug",
      "Microsoft.AspNetCore.SignalR": "Debug",
      "Microsoft.AspNetCore.Hosting": "Debug",
      "Microsoft.Extensions.Hosting": "Debug",
      "SimpleBlazorApp": "Debug",
      "SimpleBlazorApp.Services": "Trace",
      "SimpleBlazorApp.Middleware": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss.fff ",
      "LogToStandardErrorThreshold": "Warning"
    },
    "Debug": {
      "LogLevel": {
        "Default": "Debug"
      }
    }
  },
  "ApplicationSettings": {
    "EnableDetailedLogging": true,
    "EnablePerformanceLogging": true,
    "LogSensitiveData": false
  }
}
